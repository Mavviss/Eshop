                    <div>Phone: +84 342781163</div>
                </div>
                <div class="col-sm-6 ">
                    <h5 class="mb-3">To:</h5>
                    <h3 class="text-dark mb-1">@ViewBag.NameAccount</h3>
                        <div>@ViewBag.ShippingAddress</div>
                   
                    <div>Email: @ViewBag.EmailAccount</div>
                        <div>Phone: @ViewBag.PhoneAccount</div>
                </div>
            </div>
            <div class="table-responsive-sm">
                <table class="table table-striped">
                    <thead>
                        <tr>
                           @* <th class="center">ID</th>*@
