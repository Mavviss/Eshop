@model IEnumerable<Eshop.Models.Invoice>
@{
    ViewData["Title"] = "Details";
    Layout = "_admin";
}

<div class="">
    <div class="card">

        
            <div class="card-header">
                <a class="btn btn-success" asp-action="ListProducts" asp-controller="Admin">Về danh sách</a>
            </div>


        <div class="card-header p-4">
            <div class="float-right">
                <h3 class="mb-0">Invoice #@ViewBag.Code</h3>
